<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>NYT Editor-in-Pseudo Homepage</title>
  </head>
  <body>

    <!-- Title -->
    <div id="TITLE" class="container mt-5">
      <div class="row text-center">
        <h1 class="display-6">Welcome NYT Editor-in-Pseudo!</h1>
      </div>
    </div>

    <div class="container mt-5">

      <div class="row gx-5 justify-content-center">

        <!-- CREATE Button -->
        <div class="col-3">
          <div id='CREATE_BOX' class="bg-primary bg-gradient shadow-lg rounded-3 d-flex justify-content-center align-items-center" style="height: 275px;">
            <h1 class="display-6 text-white">
              CREATE
            </h1>
          </div>
        </div>

        <!-- SEARCH Button -->
        <div class="col-3">
          <div id='SEARCH_BOX' class="bg-success bg-gradient shadow-lg rounded-3 d-flex justify-content-center align-items-center" style="height: 275px;">
            <h1 class="display-6 text-white">
              SEARCH
            </h1>
          </div>
        </div>

        <!-- DELETE Button -->
        <div class="col-3">
          <div id='DELETE_BOX' class="bg-danger bg-gradient shadow-lg rounded-3 d-flex justify-content-center align-items-center" style="height: 275px;">
            <h1 class="display-6 text-white">
              DELETE
            </h1>
          </div>
        </div>

      </div>
    </div>

    <script>
      
      const CREATE_BOX = document.getElementById('CREATE_BOX');
      const SEARCH_BOX = document.getElementById('SEARCH_BOX');
      const DELETE_BOX = document.getElementById('DELETE_BOX');
      const TITLE = document.getElementById('TITLE');

      CREATE_BOX.addEventListener('click', (e) => {
        console.log('Going To CREATE Form');
        location.href = '/create';
        
      });

      SEARCH_BOX.addEventListener('click', (e) => {
        console.log('Going To SEARCH Form');
        location.href = '/search';
      });

      DELETE_BOX.addEventListener('click', (e) => {
        console.log('Going To DELETE Form');
        location.href = '/delete';
      });

      
      TITLE.addEventListener('click', (e) => {
        location.href = '/';
      });

    </script>

  </body>
</html>
